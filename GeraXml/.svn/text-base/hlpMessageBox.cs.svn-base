using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Windows.Forms;
using ComponentFactory.Krypton.Toolkit;

namespace HLP.bel
{
    public static class hlpMessageBox
    {

        public static void ShowAviso(string sAviso)
        {
            KryptonMessageBox.Show(null, sAviso, "A L E R T A", MessageBoxButtons.OK, MessageBoxIcon.Exclamation);
        }
        public static void ShowErro(string sAviso)
        {
            KryptonMessageBox.Show(null, sAviso, "E R R O", MessageBoxButtons.OK, MessageBoxIcon.Error);
        }
    }
}
